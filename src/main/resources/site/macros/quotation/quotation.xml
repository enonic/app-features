<macro>
  <display-name>Quotation</display-name>
  <description>Add quotation</description>

  <form>
    <input name="text" type="TextLine">
      <label>Text</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input name="name" type="TextLine">
      <label>Name</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input name="image" type="ImageSelector">
      <label>Image</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
  </form>
</macro>