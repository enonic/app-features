<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<content-type>
    <display-name>Color Picker</display-name>
    <super-type>base:structured</super-type>
    <form>
        <input name="my-color-picker-1" type="CustomSelector">
            <label>Color picker</label>
            <occurrences minimum="1" maximum="5"/>
            <config>
                <service>colorPicker</service>
            </config>
        </input>
        <input name="my-color-picker-2" type="CustomSelector">
            <label>Color picker (gallery mode)</label>
            <occurrences minimum="1" maximum="5"/>
            <config>
                <service>colorPicker</service>
                <galleryMode>true</galleryMode>
            </config>
        </input>
    </form>
</content-type>
