<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<content-type>
  <display-name>Image selector</display-name>
  <super-type>base:structured</super-type>
  <allow-child-content>true</allow-child-content>
  <form>
    <input name="imageselector_min0_max1" type="ImageSelector">
      <label>One not required</label>
      <indexed>true</indexed>
      <occurrences minimum="0" maximum="1"/>
      <config/>
    </input>
    <input name="imageselector_min1_max1" type="ImageSelector">
      <label>One required</label>
      <indexed>true</indexed>
      <occurrences minimum="1" maximum="1"/>
      <config/>
    </input>
    <input name="imageselector_min0_max0" type="ImageSelector">
      <label>Infinite</label>
      <indexed>true</indexed>
      <occurrences minimum="0" maximum="0"/>
      <config/>
    </input>
    <input name="imageselector_min2_max4" type="ImageSelector">
      <label>Min 2, Max 4</label>
      <indexed>true</indexed>
      <occurrences minimum="2" maximum="4"/>
      <config/>
    </input>
    <input name="imageSelectorTree" type="ImageSelector">
      <label>Tree mode</label>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <treeMode>true</treeMode>
      </config>
    </input>
    <input name="imageSelectorFlat-IconDisabled" type="ImageSelector">
      <label>Flat mode, disable toggle icon</label>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <treeMode>false</treeMode>
        <hideToggleIcon>true</hideToggleIcon>
      </config>
    </input>
    <input name="imageSelectorTree-IconDisabled" type="ImageSelector">
      <label>Tree mode, disable toggle icon</label>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <treeMode>true</treeMode>
        <hideToggleIcon>true</hideToggleIcon>
      </config>
    </input>
  </form>
</content-type>
