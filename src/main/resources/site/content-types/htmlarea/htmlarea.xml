<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<content-type>
  <display-name>Html Area</display-name>
  <super-type>base:structured</super-type>
  <form>
    <input type="Checkbox" name="menuItem">
      <label>Menu item</label>
      <help-text>Check this to include this Page in the menu</help-text>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="htmlarea_text2" type="HtmlArea">
      <label>HTML Area with customized toolbar</label>
      <occurrences minimum="0" maximum="0"/>
      <config>
        <exclude>*</exclude>
        <include>JustifyLeft JustifyRight | Bold Italic</include>
      </config>
    </input>
  </form>
</content-type>
