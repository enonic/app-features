<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<content-type>
  <display-name>Combo box</display-name>
  <super-type>base:structured</super-type>
  <form>
    <input name="combobox_min0_max1" type="ComboBox">
      <label>One not required</label>
      <indexed>true</indexed>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <option value="o1">option A</option>
        <option value="o2">option B</option>
        <option value="o3">option C</option>
      </config>
    </input>
    <input name="combobox_min1_max1" type="ComboBox">
      <label>Required ONE</label>
      <indexed>true</indexed>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <option value="o1">option A</option>
        <option value="o2">option B</option>
        <option value="o3">option C</option>
      </config>
    </input>
    <input name="combobox_min0_max0" type="ComboBox">
      <label>Not required, Unlimited</label>
      <indexed>true</indexed>
      <occurrences minimum="0" maximum="0"/>
      <config>
        <option value="o1">option A</option>
        <option value="o2">option B</option>
        <option value="o3">option C</option>
      </config>
    </input>
    <input name="combobox_min0_max3" type="ComboBox">
      <label>Not required, Max 3</label>
      <indexed>true</indexed>
      <occurrences minimum="0" maximum="3"/>
      <config>
        <option value="o1">option A</option>
        <option value="o2">option B</option>
        <option value="o3">option C</option>
        <option value="o4">option D</option>
      </config>
    </input>
    <input name="combobox_min2_max4" type="ComboBox">
      <label>Required 2, Max 4</label>
      <indexed>true</indexed>
      <occurrences minimum="2" maximum="4"/>
      <config>
        <option value="o1">111</option>
        <option value="o2">222</option>
        <option value="o3">333</option>
        <option value="o4">444</option>
        <option value="o5">555</option>
      </config>
    </input>
  </form>
</content-type>
