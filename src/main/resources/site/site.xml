<?xml version="1.0" encoding="UTF-8"?>
<site>
  <x-data name="menu-item"/>
  <x-data name="all-except-folders" allowContentTypes="^(?!base:folder$).*" optional="true"/>
  <x-data name="folders-only" allowContentTypes="base:folder" optional="true"/>
  <config>
    <input name="backgroundColor" type="RadioButton">
      <label>Page background</label>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <option value="white">White</option>
        <option value="grey">Grey</option>
        <option value="blue">Blue</option>
        <option value="red">Red</option>
      </config>
    </input>
  </config>

  <filters>
    <response-filter name="bgcolor-filter" order="10"/>
    <response-filter name="branch-filter" order="10"/>
    <response-filter name="app-header-filter" order="10"/>
  </filters>

</site>
