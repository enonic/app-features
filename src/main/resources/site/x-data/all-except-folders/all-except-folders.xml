<?xml version="1.0" encoding="UTF-8"?>
<x-data>
  <display-name>X-data (all except folders)</display-name>
  <help-text>This x-data is available for all content types EXCEPT folders</help-text>
  <allowContentType>^(?!base:folder$).*</allowContentType>
  <items>
    <input type="TextLine" name="street">
      <label>Field 1</label>
      <indexed>true</indexed>
      <custom-text/>
      <help-text/>
      <occurrences minimum="0" maximum="2"/>
    </input>
    <input type="TextLine" name="postalCode">
      <label>Field 2</label>
      <indexed>true</indexed>
      <custom-text/>
      <help-text/>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input type="TextLine" name="postalPlace">
      <label>Field 3</label>
      <indexed>true</indexed>
      <custom-text/>
      <help-text/>
      <occurrences minimum="0" maximum="1"/>
    </input>
  </items>
</x-data>
